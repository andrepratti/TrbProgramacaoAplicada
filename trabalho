class publicacao{
    public:
    string conteudo;
    tm data;

    publicacao(){
        time_t tt;
        time(&tt);
        tm dataAtual = *localtime(&tt);
        this->data = dataAtual;
    }

    void imprimeInfo(){
        cout << this->data.tm_mday << '/' << this->data.tm_mon + 1 << '/' this->data.tm_year + 1900;
    }
};

